{
	"name": "Default template for Java coding",
	"image": "mcr.microsoft.com/devcontainers/base:${templateOption:imageVariant}",

	// ðŸ‘‡ Features to add to the Dev Container. More info: https://containers.dev/implementors/features.
	 "features": {
		"ghcr.io/jsburckhardt/devcontainer-features/bat:1": {},
		"ghcr.io/devcontainers/features/java:1": {
      "installMaven": true,
			"mavenVersion": "3.9.11",
      "version": "25",
      "jdkDistro": "tem"
    },
		"ghcr.io/devcontainers-extra/features/jbang-sdkman:2": {
			"jdkDistro": "tem",
			"jdkVersion": "25-tem"
		},
		"ghcr.io/philippart-s/feature-slidesk-talk/slidesk:1.0.0": {}
	 },

	// Mandatory to be allow the JBang VSCode extention to run JBang
	"remoteEnv": {
  	"PATH": "${containerEnv:PATH}:/usr/local/sdkman/candidates/jbang/current/bin"
	},

	// IDE customization
	"customizations": {
		"vscode": {
			"settings": {
				"java.configuration.runtimes": [
					{
						"name": "JavaSE-25",
						"path": "/usr/local/sdkman/candidates/java/current/"
					}
				]
			},
			"extensions": ["jbangdev.jbang-vscode"]
		}
	}
}
